<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
                                            android:id="@+id/fooditem_list"
                                            android:name="co.grappes.bakingnanodegree.FoodItemListFragment"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="@dimen/margin_item"
                                            android:layout_marginRight="@dimen/margin_item"
                                            app:layoutManager="LinearLayoutManager"
                                            tools:context="co.grappes.bakingnanodegree.view.FoodItemListActivity"
                                            tools:listitem="@layout/fooditem_list_content"/>

    <ProgressBar
        android:layout_width="@dimen/progress_bar_dimen"
        android:layout_height="@dimen/progress_bar_dimen"
        android:layout_centerInParent="true"
        android:id="@+id/loading_bar"/>


</RelativeLayout>